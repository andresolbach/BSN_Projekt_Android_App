<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image_view_spectrum"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:contentDescription="Spectrum"
            />

        <TextView
            android:id="@+id/text_view_spectrum_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spectrum Name"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:maxLines="1"
            android:layout_toStartOf="@id/image_view_spectrum"
            android:layout_toLeftOf="@id/image_view_spectrum"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/text_view_spectrum_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/1/2019"
            android:layout_below="@id/text_view_spectrum_name"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>